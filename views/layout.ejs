    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

</head>
<body>
    <header>
        <div>
            <h3>Backend2</h3>
        </div>
        
        
    </header>
    <!-- <% if(flash.success && flash.success.length>0){%>
        <h5><%=flash.success%></h5>
    <%}%> -->
    <main>
        <%- body %>
    </main>

    <footer>
        <h5>Footer</h5>
    </footer>
    
    <script>
        <%if(flash.success && flash.success.length>0){%>
            new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>
            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();    
            <%} %>

    </script>

</body>